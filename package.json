    "configuration": {
      "title": "Mermaid Chart",
      "properties": {
        "mermaidChart.baseUrl": {
          "type": "string",
          "default": "https://www.mermaidchart.com",
          "description": "Base URL for Mermaid Chart"
        },
        "mermaid.vscode.dark": {
          "type": "string",
          "enum": [
            "neo-dark",
            "redux-dark",
            "redux-dark-color",
            "dark"
          ],
          "default": "redux-dark",
          "description": "Default mermaid theme used for dark theme"
        },
        "mermaid.vscode.light": {
          "type": "string",
          "enum": [
            "neo",
            "redux",
            "null",
            "default",
            "base",
            "forest",
            "neutral",
            "redux-color",
            "mc"
          ],
          "default": "redux",
          "description": "Default mermaid theme used for light theme"
        },
        "mermaidChart.aiVendor": {
          "type": "string",
          "default": "copilot",
          "enum": [
            "copilot",
            "openai"
          ],
          "enumDescriptions": [
            "GitHub Copilot",
            "OpenAI models"
          ],
          "description": "The AI vendor to use for diagram generation"
        },
        "mermaidChart.aiModelFamily": {
          "type": "string",
          "default": "gpt-4o",
          "enum": [
            "gpt-4o",
            "gpt-4",
            "gpt-4-turbo",
            "gpt-3.5-turbo"
          ],
          "enumDescriptions": [
            "GPT-4o (Recommended for best results)",
            "GPT-4",
            "gpt-4-turbo",
            "GPT-3.5 Turbo"
          ],
          "description": "The AI model family to use for diagram generation"
        },
        "mermaid.vscode.maxZoom": {
          "type": "number",
          "default": 5,
          "description": "Set the maximum zoom level for diagrams."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mermaidActivityBar",
          "title": "Mermaid Chart",
          "icon": "images/mermaid-icon-32-preview.svg"
        }
      ]
    },
    "views": {
      "mermaidActivityBar": [
        {
          "id": "mermaidChart",
          "name": " ",
          "contextualOnly": true,
          "when": "mermaid.showChart"
        },
        {
          "id": "mermaidWebview",
          "name": "Mermaid Chart",
          "type": "webview",
          "contextualOnly": true,
          "when": "mermaid.showWebview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "mermaidChart.refresh",
          "group": "navigation",
          "when": "view == mermaidChart"
        },
        {
          "command": "mermaidChart.diagramHelp",
          "when": "view == mermaidChart",
          "group": "navigation"
        },
        {
          "command": "mermaidChart.diagramHelp",
          "when": "view == mermaidWebview",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "mermaidChart.insertUuidIntoEditor",
          "when": "viewItem == document",
          "group": "inline@01"
        },
        {
          "command": "mermaidChart.downloadDiagram",
          "when": "viewItem == document",
          "group": "inline@02"
        }
      ],
      "editor/context": [
        {
          "command": "mermaidChart.preview",
          "when": "resourceExtname =~ /^\\.(mmd|mermaid)$/ || resourceLangId =~ /^mermaid/",
          "group": "navigation"
        },
        {
          "command": "mermaidChart.connectDiagramToMermaidChart",
          "when": "resourceExtname =~ /^\\.(mmd|mermaid)$/ || resourceLangId =~ /^mermaid/",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "key": "ctrl+s",
        "command": "mermaidChart.syncDiagramWithMermaid",
        "when": "editorLangId =~ /^mermaid/"
      },
      {
        "key": "cmd+s",
        "command": "mermaidChart.syncDiagramWithMermaid",
        "when": "editorLangId =~ /^mermaid/",
        "mac": "cmd+s"
      },
      {
        "command": "mermaidChart.showCompletions",
        "key": "ctrl+shift+k",
        "when": "editorLangId =~ /^mermaid/"
      }
    ],
    "commands": [
      {
        "command": "mermaidChart.diagramHelp",
        "title": "Diagram help"
      },
      {
        "command": "mermaidChart.insertUuidIntoEditor",
        "title": "Link Diagram"
